name: Debug Ubuntu

on:
  push:  # Allows you to manually trigger the workflow

jobs:
  debug-macos:
    name: SSH into Ubuntu Runner
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          submodules: recursive
  
      - name: Start SSH session with tmate
        uses: mxschmitt/action-tmate@v3